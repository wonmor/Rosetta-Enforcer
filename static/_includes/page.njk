---
layout: base.njk
---

{% set navPages = collections.menu | eleventyNavigation %}

<!--Main-->
<div class="mx-auto w-full md:w-4/5 container pt-10 mx-auto flex flex-wrap flex-col md:flex-row items-start">
    <!--Left Col-->
    {# Only limit the display width while at home... #}
    {% if page.url == navPages[0].url %}
        <div class="flex flex-col w-full xl:w-2/5 justify-center lg:items-start overflow-y-hidden">
        {% else %}
            <div class="flex flex-col w-full justify-center lg:items-start overflow-y-hidden">
            {% endif %}

            {% include "static/_includes/pagination.njk" %}
            {{ content | safe }}

            {# Do NOT display the button view while at the forum... #}
            {% if page.url != navPages[2].url %}
                <form class="bg-gray-900 opacity-100 w-full shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4 ">
                    <div>
                        <label class="block text-xl text-white py-2 mb-2 " for="emailaddress ">
                            <span class="text-blue-300">Rosetta Enforcer</span> is an open-source project founded by developer <span class="text-blue-300">John Seong</span>.
            </label>
                    </div>
                    <div class="gap-3 flex items-center justify-left">
                        <a href="https://github.com/wonmor/Rosetta-Enforcer/raw/main/Installers/Install_Rosetta_Enforcer.dmg" class="bg-transparent hover:bg-blue-500 text-white hover:text-white py-2 px-4 border border-white hover:border-transparent rounded" type="button ">
                            Download the app
                        </a>
                        <a href="https://github.com/wonmor/Rosetta-Enforcer" class="bg-white hover:bg-blue-500 text-black font-semibold tracking-tighter hover:text-white py-2 px-4 border border-white hover:border-blue-500 rounded" type="button ">
                            View GitHub repository
                        </a>
                    </div>
                </form>
            {% endif %}
        </div>
        <!--Right Col-->
        {# Only display the screenshot image while at home... #}
        {% if page.url == navPages[0].url %}
            <div class="w-full xl:w-3/5 md:pl-12 overflow-hidden flex flex-col items-center">
                <h1 class="maintitle-white flex justify-center">
                    <span class="text-left md:text-right font-thin">We call this an innovation.</span></h1>
                <iframe class="mb-20 w-full" style="border: 3px dotted #EEE" height="315" src="https://www.youtube.com/embed/C9aNytW7Vtc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <img class="mx-auto w-full p-10 md:p-5 md:w-4/5 transform -rotate-6 transition hover:scale-200 duration-700 ease-in-out hover:rotate-6 " src="/images/Screenshot.png"/>
            </div>
        {% endif %}
    </div>
    <div class="mx-auto w-full md:w-4/5 container pt-10 mx-auto flex flex-wrap flex-col md:flex-row items-center">
        {% include "static/_includes/footer.njk" %}
    </div>
</div>